<Window x:Class="CardsGenerator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CardsGenerator"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="400">
    <Grid Margin="10">
        <StackPanel>
            <Button Name="OpenJsonButton" Content="Open JSON File" Width="150" Height="30" Margin="5" Click="OpenJsonButton_Click"/>
            <TextBox Name="JsonFilePathTextBox" Width="350" Height="25" Margin="5" IsReadOnly="True" VerticalContentAlignment="Center" />

            <Button Name="BrowseButton" Content="Select Save Location" Width="150" Height="30" Margin="5" Click="BrowseButton_Click" />
            <TextBox Name="SaveImagePathTextBox" Width="350" Height="25" Margin="5" IsReadOnly="True" VerticalContentAlignment="Center" />

            <Button Content="Generate cards" Click="Button_Click"/>
        </StackPanel>
    </Grid>
</Window>
