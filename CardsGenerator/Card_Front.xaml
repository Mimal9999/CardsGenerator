<UserControl x:Class="CardsGenerator.Card_Front"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CardsGenerator"
             mc:Ignorable="d" 
             MinWidth="217" MinHeight="217"
             MaxWidth="217" MaxHeight="217">
    <Grid x:Name="CardGrid" Background="{Binding BackgroundGradient}" VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
        <Image x:Name="QRCodeImage" Width="180" Height="180" Source="{Binding QRCode}"/>
    </Grid>
</UserControl>
